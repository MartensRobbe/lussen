<Window x:Class="WpfTafels.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTafels"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="390.586" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="btnTafel5" Content="Toon tafel van 5" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="102" Height="23" Click="btnTafel5_Click"/>
        <ComboBox x:Name="cmbKiesTafel" HorizontalAlignment="Left" Margin="185,10,0,0" VerticalAlignment="Top" Width="65" SelectionChanged="cmbKiesTafel_SelectionChanged"/>
        <Button x:Name="btnAlleTafels" Content="Tafels 1 - 10" HorizontalAlignment="Left" Margin="267,10,0,0" VerticalAlignment="Top" Width="102" Height="23" Click="btnAlleTafels_Click"/>
        <ListBox x:Name="lstTafels" HorizontalAlignment="Left" Margin="10,38,0,10" Width="359"/>
        <Label Content="Tafel van:" HorizontalAlignment="Left" Margin="121,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.485,0.255" Height="23"/>

    </Grid>
</Window>
